import { useState, useEffect } from 'react';
import api from '../../utils/api';
import { useSettings } from '../../context/SettingsContext';
import './PriceHistoryHint.css';

export default function PriceHistoryHint({ itemId, customerId, currentPrice, onClose }) {
  const { formatCurrency } = useSettings();
  const [priceHistory, setPriceHistory] = useState(null);
  const [loading, setLoading] = useState(false);

  // Fetch historical price when item and customer are selected
  useEffect(() => {
    if (itemId && customerId) {
      fetchPriceHistory();
    }
  }, [itemId, customerId]);

  const fetchPriceHistory = async () => {
    setLoading(true);
    try {
      // Fetch historical sales data for this item to this customer
      const response = await api.get(`/sales/item-customer-history?item_id=${itemId}&customer_id=${customerId}`);
      const history = response.data.data;

      if (history && history.last_price) {
        setPriceHistory(history);
      } else {
        setPriceHistory(null);
      }
    } catch (error) {
      console.error('Error fetching price history:', error);
      setPriceHistory(null);
    } finally {
      setLoading(false);
    }
  };

  const getPriceDifference = () => {
    if (!priceHistory || !priceHistory.last_price || !currentPrice) {
      return null;
    }
    const diff = currentPrice - priceHistory.last_price;
    const percentageChange = (diff / priceHistory.last_price) * 100;

    return {
      absolute: diff,
      percentage: percentageChange,
      increased: diff > 0,
      decreased: diff < 0,
      same: diff === 0
    };
  };

  if (!priceHistory && !loading) {
    return null;
  }

  const difference = getPriceDifference();

  return (
    <div className="price-history-hint">
      <button
        className="hint-close"
        onClick={onClose}
        aria-label="Close price history"
      >
        √ó
      </button>

      {loading && (
        <div className="hint-loading">Loading price history...</div>
      )}

      {!loading && priceHistory && (
        <div className="hint-content">
          <div className="hint-header">
            <span className="hint-icon">üí∞</span>
            <h4>Price History</h4>
          </div>

          <div className="price-comparison">
            {/* Current Price */}
            <div className="price-row current-price">
              <span className="price-label">Current Price:</span>
              <span className="price-value">{formatCurrency(currentPrice)}</span>
            </div>

            {/* Last Sold Price */}
            {priceHistory.last_price && (
              <div className="price-row history-price">
                <span className="price-label">Last Sold to {priceHistory.customer_name}:</span>
                <span className="price-value">{formatCurrency(priceHistory.last_price)}</span>
                {priceHistory.invoice_date && (
                  <span className="invoice-date">
                    ({new Date(priceHistory.invoice_date).toLocaleDateString()})
                  </span>
                )}
              </div>
            )}
          </div>

          {/* Price Difference */}
          {difference && (
            <div className={`price-difference ${difference.same ? 'same' : difference.increased ? 'increased' : 'decreased'}`}>
              <span className="diff-icon">
                {difference.same ? '‚Üí' : difference.increased ? '‚Üë' : '‚Üì'}
              </span>
              <span className="diff-text">
                {difference.same
                  ? 'Same as last price'
                  : difference.increased
                  ? formatCurrency(Math.abs(difference.absolute)) + ' higher (+' + difference.percentage.toFixed(1) + '%)'
                  : formatCurrency(Math.abs(difference.absolute)) + ' lower (-' + Math.abs(difference.percentage).toFixed(1) + '%)'
                }
              </span>
            </div>
          )}

          {/* Transaction Count */}
          {priceHistory.transaction_count > 0 && (
            <div className="transaction-info">
              <span className="transaction-count">
                {priceHistory.transaction_count} previous transaction{priceHistory.transaction_count > 1 ? 's' : ''}
              </span>
              {priceHistory.avg_price && (
                <span className="avg-price">
                  Avg: {formatCurrency(priceHistory.avg_price)}
                </span>
              )}
            </div>
          )}

          {/* Recommendation */}
          {difference && !difference.same && (
            <div className={`price-recommendation ${difference.increased ? 'warning' : 'info'}`}>
              <span className="rec-icon">{difference.increased ? '‚ö†Ô∏è' : '‚ÑπÔ∏è'}</span>
              <span className="rec-text">
                {difference.increased
                  ? 'Price increased. Confirm with customer if this is intentional.'
                  : 'Price decreased from last sale. Good deal for customer!'}
                }
              </span>
            </div>
          )}
        </div>
      )}
    </div>
  );
}
