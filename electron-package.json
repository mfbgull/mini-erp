{
  "name": "mini-erp",
  "version": "1.0.0",
  "description": "Mini ERP - Desktop Application for Windows",
  "main": "electron/main.js",
  "author": "Mini ERP",
  "license": "MIT",
  "scripts": {
    "install-deps": "cd client && npm install && cd ../server && npm install",
    "build-client": "cd client && npm run build",
    "start-electron": "electron .",
    "dist": "npm run build-client && electron-builder",
    "dist-win": "npm run build-client && electron-builder --win --x64",
    "dist-all": "npm run build-client && electron-builder -wlm"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.minierp.app",
    "productName": "Mini ERP",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "server/src/**/*",
      "server/migrations/**/*",
      "server/package.json",
      "client/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "server/node_modules/better-sqlite3/**/*",
      "server/node_modules/sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mini ERP"
    }
  }
}
